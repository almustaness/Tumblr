<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= comment.name %></strong></p>
    <p class="comment_body"><em><%= comment.body %></em></p>
    <p class="comment_title"><%= time_ago_in_words(comment.created_at) %></p>
    <% unless !user_signed_in? %>
      <p><%= link_to 'Delete', [comment.post, comment], method: :delete, class:'button', data:{confirm: 'Your are going to delete this comment'} %></p>
    <% end %>
  </div>
</div>