<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>
  
  <p class="date">
    Submmited: <%= time_ago_in_words(@post.created_at) %> ago &nbsp &nbsp &nbsp
    <%= link_to "Edit", edit_post_path(@post) %> &nbsp
    <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "You are going to delete this post"} %> 
  </p>
  
  
  
  <p class="body">
    <%= @post.body %>
  </p>
  
  <div id="comments">
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>
    <h3> Join Discussion: </h3>
    <%= render "comments/form" %>
  </div>
</div>