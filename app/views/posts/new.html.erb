<div id="page_wrapper">
  <h1>Post Something</h1>
    <%= form_for :post, url: posts_path do |f| %>
    <div class="error">
      <% if @post.errors.any? %>
        <h2><%= pluralize(@post.errors.count, "error") %> stopped this post from being posted.</h2>
        <ul>
          <% @post.errors.full_messages do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
      
    </div>
    
      <p>
       <%= f.label :Title %><br>
       <%= f.text_field :title %>
      </p>
    
      <p>
        <%= f.label :Body %><br>
        <%= f.text_area :body %>
      </p>
      
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </h1>
</div>
